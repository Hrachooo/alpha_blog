<h1>Article description</h1>
<p><strong>Title: </strong><%= @article.title%></p>
<p><strong>Description: </strong><%= @article.description%></p>

<br> 
<p1 class="animated-text">
<%  flash.each do |name, message| %>
  <strong><%= message %></strong>
<% end %>
</p1>
<br> <br> <br>
<table>
    <thead>
        <tr>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <ul>
                <td>
                <li><%= link_to 'Edit', edit_article_path(@article)%></li> <br> 
                <li><%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete } %></li> <br> 
                <li><%= link_to 'Back to list', articles_path%></li> 
                </td>
            </ul>
        </tr>
    </tbody>
</table>
<h1>Create a new article</h1> 
 
    <ul>
        <% if @article.errors.any? %>
          <h2> Following errors prevented</h2>
            <% @article.errors.full_messages.each do |error| %>
                <li><%=error%></li>
            <% end %>

        <% end %>
    </ul>

    <%=  form_with scope: :article, data: {turbo: false},url: articles_path ,local: true  do |f| %>
        <p>
            <%= f.label :title%> <br>
            <%= f.text_field :title%>
        </p>
        <p>
            <%= f.label :description %> <br>
            <%= f.text_area :description %>
        </p>
        <p>
            <%= f.submit %>
        </p>
    <% end %>



<br>
<a href=/articles>Cancel</a>